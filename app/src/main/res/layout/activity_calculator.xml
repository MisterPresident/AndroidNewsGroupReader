<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.sw2017.calculator.Calculator">

    <Button
        android:id="@+id/button0"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:text="@string/_0"
        app:layout_constraintBottom_toTopOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonClear"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:text="@string/_1"
        app:layout_constraintBottom_toTopOf="@+id/buttonClear"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:text="@string/_2"
        app:layout_constraintBottom_toTopOf="@+id/buttonClear"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:text="@string/_3"
        app:layout_constraintBottom_toTopOf="@+id/buttonClear"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:text="@string/_4"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:text="@string/_5"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:text="@string/_6"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:text="@string/_7"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:text="@string/_8"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button7"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:text="@string/_9"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button8"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:text="@string/_clear"
        app:layout_constraintBottom_toTopOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:text="@string/_equal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button0"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:text="@string/_add"
        app:layout_constraintBottom_toTopOf="@+id/buttonSub"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button9"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/buttonSub"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:text="@string/_sub"
        app:layout_constraintBottom_toTopOf="@+id/buttonMul"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button6"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/buttonMul"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:text="@string/_mul"
        app:layout_constraintBottom_toTopOf="@+id/buttonDiv"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/buttonDiv"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:text="@string/_div"
        app:layout_constraintBottom_toTopOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonEqual"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView"
        android:textSize="50sp"
        android:textColor="#000000"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/_numberView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
